body {
	background: url(../img/3.png) no-repeat;
	background-size: 100% 150%;
	margin: 0px;
	color: grey;
	font-family: 微软雅黑, 宋体, Arial, Helvetica;
}

.formTbl {
	width:90%;
	margin: 0px auto 0px auto;
}


#aa {
	background-color: wheat;
	width: 450px;
	height: 500px;
	margin: 60px 40% 50px 60%;
	border-radius: 6px;
	background: linear-gradient(to top, rgba(255, 255, 255, 0) 0%,
		rgba(255, 255, 255, 0.2) 5%, rgba(255, 255, 255, 0.4) 10%,
		rgba(167, 166, 166, 0.6) 90%, rgba(150, 148, 148, 0.8) 95%,
		rgb(175, 173, 173) 100%);
	padding: 20px;
}

.two {
	width: 450px;
	height: 500px;
	background-color: rgb(242, 234, 218);
	opacity: 0.8;
	border-radius: 6px;
}

.loginText {
	width: 250px;
	position: relative;
	height: 30px;
	border-top: 0px;
	border-right: 0px;
	outline: none;
	border-left: 0px;
	border-bottom: 2px solid #ccc;	
	background-color: transparent;
}

#login_click {
	margin-top: 32px;
	height: 40px;
}

#login_click a {
	text-decoration: none;
	background: #2f435e;
	color: #f2f2f2;
	padding: 18px 53px 21px 56px;
	font-size: 18px;
	font-family: 微软雅黑, 宋体, Arial, Helvetica, Verdana, sans-serif;
	font-weight: bold;
	border-radius: 3px;
	-webkit-transition: all linear 0.30s;
	-moz-transition: all linear 0.30s;
	transition: all linear 0.30s;
}

#login_click a:hover {
	background: #385f9e;
}

#box {
	position: absolute;
	width: 24px;
	top: 10px;
	right: 30px;
}